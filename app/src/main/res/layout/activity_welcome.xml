<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/ll_line_blue"
        android:paddingBottom="5dp"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="bottom|center"
            android:text="BIENVENIDO A CNC PRO"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher2_foreground"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|top"
            android:text="Esta Aplicacion te ayudara a controlar tu CNC mediante GRBL subiendo archivos y comandos por internet."
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewa5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|top"
            android:text="Esta Aplicacion te ayudara a controlar tu CNC mediante GRBL subiendo archivos y comandos por internet."
            android:textColor="@color/colorPrimary"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="* Politicas de privacidad"
            android:textStyle="bold|italic"/>

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center|top"
            android:text="* Terminos del Servicio"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_line_blue"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/ll_button_acept"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingTop="5dp"
        android:paddingRight="35dp"
        android:paddingBottom="5dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button_acept"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"
        android:paddingRight="35dp"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/btn_acetp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Aceptar y Continuar"
            android:textColor="?android:attr/colorBackground"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>