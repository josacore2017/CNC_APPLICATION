<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_control_arrows"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center"
    android:scaleType="centerInside"
    android:layout_centerHorizontal="true"
    android:elevation="20dp"
    app:cardElevation="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_control_arrow_left_top"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_left_top" />

            <ImageView
                android:id="@+id/iv_control_arrow_top"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_top" />

            <ImageView
                android:id="@+id/iv_control_arrow_right_top"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_right_top" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_control_arrow_left"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_left" />

            <ImageView
                android:id="@+id/iv_control_home"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_home" />

            <ImageView
                android:id="@+id/iv_control_arrow_right"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_control_arrow_left_bottom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_left_bottom" />

            <ImageView
                android:id="@+id/iv_control_arrow_bottom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_bottom" />

            <ImageView
                android:id="@+id/iv_control_arrow_right_bottom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_action_arrow_right_bottom" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>